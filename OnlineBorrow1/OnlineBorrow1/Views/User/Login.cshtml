<body style="background-color: white;">
    <div class="container" style="width: 100%; padding: 0">
        <div class="row clearfix" style="margin-right:0px;">

            <div class="col-md-2 column" style="margin-right: 0px">
            </div>
            <div class="col-md-6 column" style="padding-top: 22px; padding-bottom: 22px; width: 0;">
                <img src="/Images/logo_2.png" />
            </div>
        </div>

        <div class="row clearfix" style="width: 100%; margin: 0px; height: 600px">
            <table>
                <tr>
                    <td style="width: 18%; background-color: rgb(26, 86, 149);">
                        <div class="col-md-2 column" style="height: 600px;">
                        </div>
                    </td>
                    <td style="width: 38%; background-color: rgb(26, 86, 149);">

                        <img src="/Images/3.png" style="width: 100%; height: 600px;" />

                    </td>
                    <td style="width: 38%; background-color:rgb(26, 86, 149);">
                        <div class="col-md-5 column" style="padding: 0; height: 600px;">
                            <div class="page-container" style="background-color: rgba(0,0,0,0.5); width: 400px; height: 450px; padding-top: 50px; margin-top: 60px">
                                <form action="~/User/Login" method="post">
                                    <div class="row" style="margin-left: 5px">
                                        <h1 style="color: white; font-family: Gabriola; float: left"><strong>账号登录</strong></h1>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1 column">
                                            <span class="glyphicon glyphicon-user" style="color: white; padding-top: 30px; font-size: 30px;"></span>
                                        </div>
                                        <div class="col-md-2 column">
                                            <input type="text" name="username" class="username" placeholder="Username" style="background-color: LightGoldenRodYellow; color: black; padding-right: 15px; margin-right: 15px;">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1 column">
                                            <span class="glyphicon glyphicon-lock" style="color: white; font-size: 30px; padding-top: 30px"></span>
                                        </div>
                                        <div class="col-md-2 column">
                                            <input type="password" name="password" class="password" placeholder="Password" style="background-color: LightGoldenRodYellow; color: black; padding-right: 15px;">
                                        </div>
                                    </div>
                                    <button type="submit" style="margin-left: 22px">登陆</button>
                                    <div class="error"><span>+</span></div>
                                </form>
                            </div>
                        </div>
                    </td>
                    <td style="width: 18%; background-color:rgb(26, 86, 149);">
                        <div class="col-md-2 column" style=" height: 600px;">
                        </div>
                    </td>
                </tr>
            </table>
        </div>

    </div>
    <div class="row clearfix" style="margin-right:0px;">
        <div class="col-md-12 column" style="padding: 10px;padding-right:0px;">
